<div class="container py-5">
	<% if @user == current_user%>
		<%= link_to 'edit profle', edit_user_registration_path, class: 'btn btn-primary float-right'%>
	<%end%>
	<strong>Name</strong>	<%= @user.fname%> <%= @user.lname%>
	<br>
  <strong>Email:</strong> <%= @user.email%>
  <%= image_tag (@user.image), class: 'img-fluid' if @user.image.attached? %>
	<div class="row py-4">
  		<% @user.posts.each do |post|%>
	   		<div class="col-md-3">
	   			<div class="card">
	   				<div class="card-body">
		   				<%= post.description%>
		  				<%= image_tag (post.image), class: 'img-fluid' if post.image.attached? %>
	   				</div>
	   			</div>
	   		</div>
  		<%end%>
  	</div>
       
</div>
